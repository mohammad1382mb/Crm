<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRM"
             xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="CRM.TableRemainders"
             mc:Ignorable="d" 
             d:DesignHeight="39" d:DesignWidth="565">
    <Grid Height="39" Width="565" HorizontalAlignment="Right" Margin="0,0,25,0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="361*"/>
            <ColumnDefinition Width="118*"/>
            <ColumnDefinition Width="36*"/>

        </Grid.ColumnDefinitions>
        <Image x:Name="CheckReminderGreen" Source="/Image/icons8-tick-50 (2).png" Margin="10,4,10,5" Cursor="Hand" />
        <Image x:Name="CheckReminderWhite" Source="/Image/icons8-tick-50 (1).png" Margin="10,4,10,5" Cursor="Hand" Visibility="Visible" />
        <Image Source="/Image/remaiders.png" Grid.Column="3" Margin="0,4,0,5" />

        <Label x:Name="TitleTxt" Grid.Column="2" Content="موضوع یادآور" VerticalAlignment="Center" HorizontalAlignment="Right"  Foreground="#ffffff" FontFamily="Tahoma" FontSize="14" Height="35" Margin="0,2" Width="118" FontWeight="Bold" Background="#00000000"  BorderBrush="#00000000" />

        <Label x:Name="InfoTxt" Grid.Column="1" Content="جزییات یادآور"  FontFamily="Tahoma" FontSize="13" Height="31" Margin="0,4" VerticalAlignment="Center" HorizontalAlignment="Right" Background="#00000000" Foreground="White" BorderBrush="#00000000" Width="361"/>

    </Grid>
</UserControl>
